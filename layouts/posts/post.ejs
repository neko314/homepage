<article>
  <header class="post-header">
    <h1 class="post-title"><%= path.basename(file.path, ".html") %></h1>
    <p class="post-metadata">公開：<time datetime="<%= file.stat.mtime.toISOString() %>"><%= file.stat.mtime.toLocaleString() %></time></p>
  </header>
  <section class="post-content">
    <%- content %>
  </section>
  <footer class="post-footer">
    <p>
      <a href="/">トップ</a> | <a href="/posts/">一覧</a>
    </p>
  </footer>
</article>
